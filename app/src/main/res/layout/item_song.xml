<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_small"
    android:foreground="?selectableItemBackground">

    <ImageView
        android:id="@+id/imgSongPreview"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:src="@drawable/divide"
        android:contentDescription="@string/placeholder"
        tools:ignore="MissingConstraints" />
    
    <TextView
        android:id="@+id/txtListSongName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintLeft_toRightOf="@+id/imgSongPreview"
        app:layout_constraintTop_toTopOf="@+id/imgSongPreview"
        app:layout_constraintBottom_toTopOf="@+id/txtListArtistName"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/margin_small"
        tools:text="@string/long_placeholder" />

    <TextView
        android:id="@+id/txtListArtistName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintLeft_toRightOf="@+id/imgSongPreview"
        app:layout_constraintTop_toBottomOf="@+id/txtListSongName"
        app:layout_constraintBottom_toBottomOf="@+id/imgSongPreview"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/margin_small"
        tools:text="@string/long_placeholder" />
    
</androidx.constraintlayout.widget.ConstraintLayout>